<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1E1E1E</item>
        <item name="colorPrimaryDark">#2E2E2E</item>
        <item name="colorAccent">@color/colorAccent</item> <!-- Reference colorAccent from colors.xml -->
        <item name="android:windowBackground">#1E1E1E</item>
    </style>

    <!-- Style for the OTP input layout -->
    <style name="OtpInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#2E2E2E</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item> <!-- Reference colorAccent from colors.xml -->
        <item name="hintTextColor">#B0B0B0</item>
    </style>

    <!-- Style for the OTP input text -->
    <style name="OtpEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>